<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New MiamiAqua Spot</h1>
        <div class="col-6 offset-3">
            <form action="/spots" method='post'>
                <div class='mb-3'>
                    <label class='form-label' for="name">Spot Name</label>
                    <input class='form-control' type="text" name='name' id='name' palceholder='spot name'>
                </div>
                <div class='mb-3 form-group'>
                    <label class='form-label' for="price">Price</label>
                    <select class='form-control' name='price' id='price'>
                        <option value=0>0</option>
                        <option value=1>$</option>
                        <option value=2>$$</option>
                        <option value=3>$$$</option>
                    </select>
                </div>
                <div class='mb-3'>
                    <label class='form-label' for="activity">Activity</label>
                    <select class='form-control' name="activity" id='activity'>
                        <option value="beach day">beach day</option>
                        <option value="snorkeling">snorkeling</option>
                        <option value="paddle boarding">paddle boarding</option>
                    </select>
                </div>
                <div class='mb-3'>
                    <label class='form-label' for="imgage">Image URL</label>
                    <input class='form-control' type="text" name='image' id='image' palceholder='spot[image]'>
                </div>
                <div class='mb-3'>
                    <label class='form-label' for="description">Description</label>
                    <textarea class='form-control' type="text" name='description' id='description'
                        palceholder='description'></textarea>
                </div>
                <div class="mb-3">
                    <button class='btn btn-success'>Submit</button>
                    <a class='btn btn-secondary' href="/spots">Cancel</a>
                </div>
            </form>
            <a href="/spots">All MiamiAqua Spots</a>
        </div>
    </div>