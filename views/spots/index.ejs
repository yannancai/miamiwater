<% layout('layouts/boilerplate')%>
    <div id="map" style="width: 100%; height: 500px"></div>
    <h1>Amazing Miami <%=activity%> Spots</h1>

    <ul>
        <% for(let spot of spots){ %>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src='<%=spot.image%>'>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=spot.name%>
                            </h5>
                            <p class="card-text">
                                <%=spot.description%>
                            </p>
                            <p class="card-text">
                                <%=spot.description%>
                            </p>
                            <a href="/spots/<%=spot._id%>" class="btn btn-primary">View <%=spot.name%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>
    <div>
        <a href="/spots/new">Add a new spot</a>
    </div>
    <%if (activity !=='Watersports' ) {%>
        <a href="/spots">All watersports Spots</a>
        <%}%>

            <div>
                <% const coords={features: spots} %>
                    <%= coords %>
            </div>


            <script>
                const spots = { features: <%- JSON.stringify(spots) %> }
            </script>
            <script src='/javascripts/clusterMap.js'></script>